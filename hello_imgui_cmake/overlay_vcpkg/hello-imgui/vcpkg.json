{
  "name": "hello-imgui",
  "version": "1.3.0",
  "homepage": "https://pthom.github.io/hello_imgui/",
  "description": "Hello, Dear ImGui: unleash your creativity in app development and prototyping",
  "license": "MIT",
  "dependencies": [
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    {
      "name" : "vcpkg-cmake-config",
      "host" : true
    },
    {
      "name": "imgui",
      "features": ["docking-experimental", "freetype", "freetype-lunasvg"]
    },
    {
      "name": "glad",
      "features": ["gl-api-43"]
    },
    {
      "name": "stb"
    }
  ],

  "default-features": ["opengl3-binding", "glfw-binding"],

  "features": {
    "opengl3-binding":
    {
      "description": "opengl3-binding",
      "dependencies": [
        {
          "name": "imgui",
          "features": ["opengl3-binding"]
        }
      ]
    },

    "metal-binding":
    {
      "description": "metal-binding",
      "dependencies": [
        {
          "name": "imgui",
          "features": ["metal-binding"]
        }
      ]
    },

    "vulkan-binding":
    {
      "description": "vulkan-binding",
      "dependencies": [
        {
          "name": "imgui",
          "features": ["vulkan-binding"]
        }
      ]
    },


    "glfw-binding":
    {
      "description": "glfw-binding",
      "dependencies": [
        {
          "name": "imgui",
          "features": ["glfw-binding"]
        }
      ]
    },

    "sdl2-binding":
    {
      "description": "sdl2-binding",
      "dependencies": [
        {
          "name": "imgui",
          "features": ["sdl2-binding"]
        }
      ]
    }

  }
}
